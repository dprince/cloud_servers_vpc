<h1>Edit Image</h1>

<div id="image-edit-error-messages" class="ui-widget" style="display: none">
    <div class="ui-state-error ui-corner-all" style="padding: .25em .25em .25em 2.5em;">
<p><span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
<div id="image-edit-error-messages-content"></div>
</p>
    </div>
</div>

<script type="text/javascript">

$(document).ready(function() {
    $('input.image_edit').keydown(function(e){
        if (e.keyCode == 13) {
            image_edit();
            return false;
        }
    });
});

</script>

<%= form_for(@image, :html => { :id => "image-edit-form", :onsubmit => "image_edit(); return false;"}) do |f| %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => "image_edit" %>
  </p>

  <p>
    <%= f.label :image_ref %><br />
    <%= f.text_field :image_ref, :class => "image_edit", :size => 60 %>
  </p>

  <p>
    <%= f.label :os_type %><br />
    <%= f.select :os_type, ['linux','windows'].collect {|p| [ p, p ] }, {:include_blank => true, :class => "image_edit"} %>

  </p>

  <p>
    <%= f.label :is_active %><br />
    <%= f.check_box :is_active, :class => "image_edit" %>

  </p>

<% end %>
