<script>

    $(document).ready(function() {
        user_table_selectors();
    });

</script>

<%= will_paginate @users, :params => {:layout => false}, :class => "user-paginate" %>

<table class="ui-widget ui-widget-content data">
  <tr class="ui-widget-header">
    <th>Username</th>
    <th>Admin</th>
    <th colspan="3">&nbsp;</th>
  </tr>

<% @users.each do |user| %>
  <tr id="tr-user-<%= user.id %>" class="<%= cycle "tr0", "tr1" %>">
    <td id="td-username-<%= user.id %>"><%= raw chop_for_html(user.username) %></td>
    <td id="td-admin-<%= user.id %>"><%= yes_no(user.is_admin) %></td>
    <td><%= link_to 'Password', "/users/#{user.id}/password", { :class => "user-password" } %></td>
    <td><%= link_to 'Edit', edit_user_path(user), { :class => "user-edit" } %></td>
    <td><%= link_to 'Destroy', user, { :class => "user-delete" } %></td>
  </tr>
<% end %>
</table>
