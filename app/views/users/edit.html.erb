<h1>Edit User</h1>

<div id="user-edit-error-messages" class="ui-widget" style="display: none">
    <div class="ui-state-error ui-corner-all" style="padding: .25em .25em .25em 2.5em;">
<p><span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
<div id="user-edit-error-messages-content"></div>
</p>
    </div>
</div>

<script type="text/javascript">

$(document).ready(function() {
    $('input.user_edit').keydown(function(e){
        if (e.keyCode == 13) {
            user_edit();
            return false;
        }
    });
});

</script>

<% form_for(@user, :html => { :id => "user-edit-form", :onsubmit => "user_edit(); return false;"}) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username, :class => "user_edit" %>
  </p>

  <p>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, :class => "user_edit" %>
  </p>

  <p>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, :class => "user_edit" %>
  </p>

<hr/>

  <p>
    <%= f.check_box :is_admin, :class => "user_edit" %>
    <label>Administrator</label>
  </p>

<% end %>
